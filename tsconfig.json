{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "lib": [ "ESNext", "dom" ],
    "baseUrl": "./src",
    "jsx": "react-jsx",
  },
  "exclude": [ "node_modules" ],
  "include": [
    "src/**/*",
  ]
}