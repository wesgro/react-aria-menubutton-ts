{
    "compilerOptions": {
        "baseUrl": "./src",
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "declaration": true,
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react-jsx",

    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }